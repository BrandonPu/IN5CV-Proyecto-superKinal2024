<AnchorPane id="AnchorPane" prefHeight="750.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.brandonpu.controller.MenuFacturaController">
   <children>
      <ImageView fitHeight="750.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/FondoMenuFactura.png" />
         </image>
      </ImageView>
      <TextField fx:id="tfFacturaId" editable="false" layoutX="1007.0" layoutY="160.0" prefHeight="38.0" prefWidth="174.0" style="-fx-background-radius: 10;" />
      <ComboBox fx:id="cmbClienteId" layoutX="482.0" layoutY="160.0" prefHeight="38.0" prefWidth="218.0" />
      <ComboBox fx:id="cmbEmpleadoId" layoutX="732.0" layoutY="160.0" prefHeight="38.0" prefWidth="231.0" />
      <TableView fx:id="tblFacturas" layoutX="14.0" layoutY="205.0" onMouseClicked="#cargarDatosEditar" prefHeight="400.0" prefWidth="950.0">
        <columns>
          <TableColumn fx:id="colFacturaId" minWidth="100.0" prefWidth="75.0" text="facturaId" />
          <TableColumn fx:id="colFecha" minWidth="175.0" prefWidth="75.0" text="fecha" />
            <TableColumn fx:id="colHora" minWidth="175.0" prefWidth="75.0" text="hora" />
            <TableColumn fx:id="colClienteId" minWidth="175.0" prefWidth="75.0" text="clienteId" />
            <TableColumn fx:id="colEmpleadoId" minWidth="175.0" prefWidth="75.0" text="empleadoId" />
            <TableColumn fx:id="colTotal" minWidth="150.0" prefWidth="75.0" text="total" />
        </columns>
      </TableView>
      <Button fx:id="btnRegresar" layoutX="1007.0" layoutY="622.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="60.0" prefWidth="110.0" style="-fx-background-radius: 10;" text="Regresar">
         <font>
            <Font name="System Italic" size="18.0" />
         </font>
      </Button>
      <Button fx:id="btnGuardar" layoutX="1007.0" layoutY="238.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="60.0" prefWidth="110.0" style="-fx-background-radius: 10;" text="Guardar">
         <font>
            <Font name="System Italic" size="18.0" />
         </font>
      </Button>
      <Button fx:id="btnEliminar" layoutX="1007.0" layoutY="375.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="60.0" prefWidth="110.0" style="-fx-background-radius: 10;" text="Eliminar">
         <font>
            <Font name="System Italic" size="18.0" />
         </font>
      </Button>
      <Button fx:id="btnVaciar" layoutX="1001.0" layoutY="494.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="60.0" prefWidth="121.0" style="-fx-background-radius: 10;" text="Vaciar Form">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
