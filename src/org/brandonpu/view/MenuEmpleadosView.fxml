      <Button fx:id="btnAgregar" layoutX="76.0" layoutY="245.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="60.0" prefWidth="110.0" style="-fx-background-radius: 10;" text="Agregar">
